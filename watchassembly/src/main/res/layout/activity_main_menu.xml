<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tumblr_grey">

        <TextView
            android:id="@+id/txtNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnLogout"
            android:text="nickname"
            android:textSize="@dimen/item_font_size_large" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logout"
            android:longClickable="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logout" />

    </RelativeLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnViewAssemblymanList"
                style="@style/Item.Large"
                android:background="@drawable/light_blue_oval_selector"
                android:text="국회\n의원" />

            <Button
                android:id="@+id/btnViewBillList"
                style="@style/Item.Large"
                android:background="@drawable/cyan_oval_selector"
                android:text="의안" />

            <Button
                android:id="@+id/btnViewHallOfFame"
                style="@style/Item.Large"
                android:background="@drawable/teal_oval_selector"
                android:text="명예\n전당" />

            <Button
                android:id="@+id/btnViewPublicOpinion"
                style="@style/Item.Large"
                android:background="@drawable/green_oval_selector"
                android:text="국민\n참여" />

            <Button
                android:id="@+id/btnViewMypage"
                style="@style/Item.Large"
                android:background="@drawable/tumblr_orange_oval"
                android:text="마이\n페이지" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/layout_child_offset_medium"
            android:layout_height="@dimen/layout_child_offset_medium"
            android:layout_gravity="center"
            android:background="@drawable/emblem"
            android:scaleType="centerCrop" />
    </FrameLayout>

</LinearLayout>
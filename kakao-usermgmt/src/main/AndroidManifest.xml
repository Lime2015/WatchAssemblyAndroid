<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lime.sample.usermgmt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/usermgmt_sample_icon"
        android:theme="@android:style/Theme.NoTitleBar"
        android:name="com.lime.template.loginbase.GlobalApplication">
        <activity
            android:name="com.lime.sample.usermgmt.UserMgmtLoginActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lime.sample.usermgmt.UsermgmtSignupActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"/>

        <activity
            android:name="com.lime.sample.usermgmt.UsermgmtMainActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop"/>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

    </application>

</manifest>